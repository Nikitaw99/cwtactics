<scripts>

  <script id="luck" event="attack">
    damage += parseInt(Math.random()*10, 2);
  </script>

  <co id="coXYZ">
    <d2d>
      <script id="giveExtraFunds" event="turnStart">
        player.properties.each(function( prop ){
          player.gold += Property.sheet( prop.type ).funds*0.1;
        });
      </script>
    </d2d>
  </co>
</scripts>