# State controls the flow of the game
define context State

object Game:

    synced active
    synced players asArray ( MAX_PLAYERS ) :
        name String
        team        
    
    function initialize :
    
        // clear players array
        for i in players :
            i.name = null
            i.team = -1
            
    function startGame :
        Game.active = true
        while Game.active :
            sleep 10
            
            // trigger the active strategy of State
            trigger "State"