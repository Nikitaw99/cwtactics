/*
 * constants define which bit shows an information for the graphic screen
 */
const RED_OVERLAY : 0
const BLUE_OVERLAY : 1

/*
 * connection object to the JSLIX stack
 */
object Screen :
    
    scrInf asArray ( JSlix.getWidth * JSlix.getHeigth )
    
    function clear :
        for i in scrInf :
            scrInf[i] = 0
            
    function setInfOn x , y , bitInf :
        p = y*Map.width -1 +x
        scrInf[ p ] = stbLib.setBit( scrInf[ p ], bitInf )