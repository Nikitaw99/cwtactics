struct MoveCard :
    movingUnit indexOf UnitFactory.unit
    way[ Settings.MAX_MOVEPOINTS ] indexOf Map.tiles
    leftPoints

    pushTile tile indexOf Map.tiles :
        assert( ! tile in way )
        notImplemented()

        cost = MoveTable.moveCost( way[i] , movingUnit )

        if leftPoints >= cost :
            leftPoints -= cost
            append tile to way

    clearTo tile indexOf Map.tiles :
        assert( tile in way )

        s = size( way )
        for i=tile+1 to s :
            leftPoints += MoveTable.moveCost( way[i] , movingUnit )
            way[i] = null


struct ResourceCard :
    gold
    properties
    units

struct BattleCard :
    attacker indexOf UnitFactory.units
    defender indexOf UnitFactory.units
    attackDamage
    counterDamage

moveCard MoveCard
battleCard BattleCard
resourceCars[ Settings.MAX_PLAYERS ] ResourceCard
    
