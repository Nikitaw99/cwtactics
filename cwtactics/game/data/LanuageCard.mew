class LanguageCard :
	
	def constructor():
		self.map = HashMap();
		setup();
		
	def setup():
		self.map.put( "LTANK" , "Light tank"  );
		self.map.put( "MDTANK" , "Battle tank" );
		self.map.put( "HTANK" , "War tank"    );
		self.map.put( "INFANTRY" , "Infantry"    ); 
		self.map.put( "OIL" , "Oil"    ); 
		self.map.put( "GOLD" , "Gold"    ); 
	
	# returns string for a given ID
	def get( key ) :
		if( self.map.hasKey(key) == False ) _messageExit( "")
		return self.map.get( key );
	